<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="teacher_tree_view" model="ir.ui.view">
        <field name="name">teacher.teacher.tree</field>
        <field name="model">teacher.teacher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="department"/>
                <field name="age" invisible="1"/>
            </tree>
        </field>
    </record>
   

    <record id="teacher_form_view" model="ir.ui.view">
        <field name="name">teacher.teacher.form</field>
        <field name="model">teacher.teacher</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="2">
                        <group>
                        <field name="name"/>
                        <field name="department"/>
                        <field name="age"/>
                       
                    </group>
                    <group>
                        <field name="gender" string = "Gender"/>  
                        <field name="salary"/> 
                        <field name="is_active"/> 
                    </group>
                    </group>
                    <notebook>
                        <page string = "Student">
                            <field name = "student_id">
                                <tree string = "Student">
                                    <field name="name"/>
                                    <field name="st_class"/>
                                    <field name="roll"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    
                </sheet>
                
                
            </form>
        </field>
    </record>

   

   
</odoo>

