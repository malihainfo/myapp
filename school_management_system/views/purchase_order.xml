<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_from_view_inherit" model="ir.ui.view">
        <field name="name">purchase.order.from.view.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref= "purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr= "//field[@name='partner_id']" position= "after">
                <field name = "test"/>
                <field name = "is_ok"/>
                <field name = "teacher_id"/>
            </xpath>
            <xpath expr="//button[@name='button_done']" position="after">               
                <button name="action_ok" string="OK" type="object" class="oe_highlight"/>
                <button name="action_not_ok" string="Not OK" type="object" class="oe_highlight"/>              
            </xpath>
            <xpath expr= "//field[@name='order_line']/tree/field[@name='product_qty']" position= "after">
                <field name = "test2"/>
                <field name = "test3"/>
                <field name = "teacher_id"/>
                
            </xpath>
        </field>
    </record>
</odoo>